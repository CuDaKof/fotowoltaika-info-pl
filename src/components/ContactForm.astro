---
// Contact form component with proper form handling
---
<form id="contact-form" action={`${import.meta.env.BASE_URL}/api/lead.php`} method="POST" class="space-y-5">
  <!-- Alert box for messages -->
  <div id="form-message" class="hidden p-4 rounded-lg"></div>

  <div>
    <label for="name" class="block text-sm font-medium text-gray-900 mb-2">Imię i nazwisko</label>
    <input 
      id="name" 
      name="name" 
      type="text" 
      required 
      class="w-full border border-gray-300 px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition" 
    />
  </div>
  <div>
    <label for="email" class="block text-sm font-medium text-gray-900 mb-2">Adres e-mail</label>
    <input 
      id="email" 
      name="email" 
      type="email" 
      required 
      class="w-full border border-gray-300 px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition" 
    />
  </div>
  <div>
    <label for="phone" class="block text-sm font-medium text-gray-900 mb-2">Numer telefonu</label>
    <input 
      id="phone" 
      name="phone" 
      type="tel" 
      class="w-full border border-gray-300 px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition" 
    />
  </div>
  <div>
    <label for="message" class="block text-sm font-medium text-gray-900 mb-2">Wiadomość</label>
    <textarea 
      id="message" 
      name="message" 
      rows="5" 
      class="w-full border border-gray-300 px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition"
    ></textarea>
  </div>
  <div class="flex items-start gap-3">
    <input 
      id="rodo" 
      name="rodo" 
      type="checkbox" 
      required 
      class="mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" 
    />
    <label for="rodo" class="text-sm text-gray-700">
      Akceptuję politykę prywatności i wyrażam zgodę na przetwarzanie danych osobowych.
    </label>
  </div>
  <button 
    type="submit" 
    id="submit-btn"
    class="w-full bg-blue-600 text-white font-medium py-3.5 hover:bg-blue-700 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
  >
    Wyślij wiadomość
  </button>
</form>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageBox = document.getElementById('form-message');
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Disable button and show loading state
    submitBtn.disabled = true;
    submitBtn.textContent = 'Wysyłanie...';
    
    // Hide previous messages
    messageBox?.classList.add('hidden');
    
    try {
      const formData = new FormData(form);
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      // Show message
      if (messageBox) {
        messageBox.classList.remove('hidden');
        if (result.success) {
          messageBox.className = 'p-4 rounded-lg bg-green-50 border border-green-200 text-green-800';
          messageBox.textContent = '✓ ' + result.message + ' Odezwiemy się wkrótce!';
          
          // Reset form on success
          form.reset();
        } else {
          messageBox.className = 'p-4 rounded-lg bg-red-50 border border-red-200 text-red-800';
          messageBox.textContent = '✗ ' + result.message;
        }
        
        // Scroll to message
        messageBox.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    } catch (error) {
      // Show error message
      if (messageBox) {
        messageBox.classList.remove('hidden');
        messageBox.className = 'p-4 rounded-lg bg-red-50 border border-red-200 text-red-800';
        messageBox.textContent = '✗ Wystąpił błąd. Spróbuj ponownie lub zadzwoń: 123 456 789';
      }
    } finally {
      // Re-enable button
      submitBtn.disabled = false;
      submitBtn.textContent = 'Wyślij wiadomość';
    }
  });
</script>