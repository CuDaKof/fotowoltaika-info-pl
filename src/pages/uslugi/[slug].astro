---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { USLUGI } from "../../data/uslugi";

export function getStaticPaths() {
  return USLUGI.map(u => ({ params: { slug: u.slug }, props: { u } }));
}
const { u } = Astro.props;
const title = `${u.name} — ${u.segment === 'b2b' ? 'dla firm' : u.segment === 'b2c' ? 'dla domu' : 'dla domu i firm'}`;
const desc  = `${u.lead}`;
---
<BaseLayout title={title} description={desc}>
  <section class="max-w-6xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-2">{u.name}</h1>
    <p class="text-gray-700 mb-6">{u.lead}</p>
    <ul class="list-disc pl-5 space-y-1 text-gray-700">
      {u.bullets.map(b => <li>{b}</li>)}
    </ul>
    <div class="mt-8 flex gap-3">
      <a href={`${import.meta.env.BASE_URL}/kontakt`} class="px-4 py-2 rounded bg-black text-white">Umów wizytę</a>
      <a href={u.segment === 'b2b' ? '/b2b' : '/b2c'} class="px-4 py-2 rounded border">Wróć do oferty</a>
    </div>
  </section>
</BaseLayout>