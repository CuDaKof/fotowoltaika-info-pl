---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import CalendarEmbed from "../components/CalendarEmbed.astro";
---
<BaseLayout title="Kontakt — fotowoltaika.info.pl" description="Skontaktuj się z nami. Bezpłatny audyt energetyczny. Odpowiadamy 7:00–21:00, 7 dni w tygodniu.">
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-light mb-4">
        Skontaktuj się <span class="font-semibold">z nami</span>
      </h1>
      <p class="text-xl text-gray-600">
        Jesteśmy do Twojej dyspozycji codziennie od 7:00 do 21:00. Wypełnij formularz lub zadzwoń, aby umówić spotkanie.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <!-- Formularz kontaktowy -->
      <div class="bg-white border border-gray-200 p-8">
        <h2 class="text-2xl font-semibold mb-6">Wyślij wiadomość</h2>
        <ContactForm />
      </div>

      <!-- Dane kontaktowe -->
      <div>
        <div class="bg-blue-50 border border-blue-100 p-8 mb-6">
          <h2 class="text-2xl font-semibold mb-6">Umów spotkanie</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-medium text-gray-900 mb-2">📞 Telefon</h3>
              <p class="text-lg text-blue-600 font-medium">123 456 789</p>
              <p class="text-sm text-gray-600">Pon–Ndz: 7:00–21:00</p>
            </div>
            
            <div>
              <h3 class="font-medium text-gray-900 mb-2">✉️ Email</h3>
              <p class="text-lg text-blue-600 font-medium">cudakof@gmail.com</p>
            </div>
            
            <div>
              <h3 class="font-medium text-gray-900 mb-2">📍 Obszar działania</h3>
              <p class="text-gray-700">Śląskie i cała Polska</p>
              <p class="text-sm text-gray-600">Audyt na miejscu w 48h</p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 border border-gray-200 p-8">
          <h3 class="font-semibold mb-4">💡 Co dalej?</h3>
          <ol class="space-y-3 text-sm text-gray-700">
            <li class="flex gap-3">
              <span class="font-semibold">1.</span>
              <span>Wypełnij formularz lub zadzwoń</span>
            </li>
            <li class="flex gap-3">
              <span class="font-semibold">2.</span>
              <span>Umówimy bezpłatną wizytę i audyt</span>
            </li>
            <li class="flex gap-3">
              <span class="font-semibold">3.</span>
              <span>Otrzymasz szczegółową wycenę</span>
            </li>
            <li class="flex gap-3">
              <span class="font-semibold">4.</span>
              <span>Realizujemy projekt pod klucz</span>
            </li>
          </ol>
        </div>
      </div>
    </div>

    <!-- Opcjonalny kalendarz spotkań -->
    <CalendarEmbed />
  </section>
</BaseLayout>