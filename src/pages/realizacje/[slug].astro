---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { REALIZACJE } from "../../data/realizacje.ts";

export function getStaticPaths() {
  return REALIZACJE.map((realizacja) => ({
    params: { slug: realizacja.slug },
    props: { realizacja },
  }));
}

const { realizacja } = Astro.props;
---

<BaseLayout 
  title={`${realizacja.tytul} - Realizacje — fotowoltaika.info.pl`}
  description={realizacja.opis}
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-50 border-b border-gray-200 py-4">
    <div class="max-w-4xl mx-auto px-4">
      <nav class="text-sm">
        <a href={`${import.meta.env.BASE_URL}/`} class="text-blue-600 hover:underline">Strona główna</a>
        <span class="mx-2 text-gray-400">›</span>
        <a href={`${import.meta.env.BASE_URL}/realizacje/`} class="text-blue-600 hover:underline">Realizacje</a>
        <span class="mx-2 text-gray-400">›</span>
        <span class="text-gray-700">{realizacja.tytul}</span>
      </nav>
    </div>
  </div>

  <!-- Hero -->
  <section class="py-12 bg-gradient-to-br {realizacja.gradient} text-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 bg-white/20 rounded-full text-sm font-medium uppercase">
          {realizacja.typ === 'dom' ? '🏠 Dom' : '🏭 Firma'}
        </span>
        <span class="px-3 py-1 bg-white/20 rounded-full text-sm">
          📍 {realizacja.lokalizacja}
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{realizacja.tytul}</h1>
      <div class="flex flex-wrap gap-4 text-lg">
        <div>⚡ <strong>{realizacja.moc}</strong></div>
        <div>💰 <strong>{realizacja.oszczednosc}</strong> oszczędności rocznie</div>
        <div>🗓️ <strong>{realizacja.dataRealizacji}</strong></div>
      </div>
    </div>
  </section>

  <article class="max-w-4xl mx-auto px-4 py-12">
    <!-- Wyzwanie -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
        <span class="text-4xl">🎯</span>
        Wyzwanie
      </h2>
      <div class="bg-orange-50 border-l-4 border-orange-500 p-6 rounded-r-lg">
        <p class="text-gray-800 leading-relaxed">{realizacja.wyzwanie}</p>
      </div>
    </section>

    <!-- Rozwiązanie -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
        <span class="text-4xl">💡</span>
        Rozwiązanie
      </h2>
      <div class="bg-green-50 border-l-4 border-green-500 p-6 rounded-r-lg">
        <p class="text-gray-800 leading-relaxed">{realizacja.rozwiazanie}</p>
      </div>
    </section>

    <!-- Specyfikacja techniczna -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
        <span class="text-4xl">⚙️</span>
        Specyfikacja techniczna
      </h2>
      <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
        <div class="space-y-4">
          <div>
            <h3 class="font-semibold text-blue-600 mb-2">Panele fotowoltaiczne:</h3>
            <p class="text-gray-700">{realizacja.specyfikacjaTechniczna.panele}</p>
          </div>
          <div>
            <h3 class="font-semibold text-blue-600 mb-2">Falownik:</h3>
            <p class="text-gray-700">{realizacja.specyfikacjaTechniczna.falownik}</p>
          </div>
          {realizacja.specyfikacjaTechniczna.magazyn && (
            <div>
              <h3 class="font-semibold text-blue-600 mb-2">Magazyn energii:</h3>
              <p class="text-gray-700">{realizacja.specyfikacjaTechniczna.magazyn}</p>
            </div>
          )}
          {realizacja.specyfikacjaTechniczna.dodatkowe && (
            <div>
              <h3 class="font-semibold text-blue-600 mb-2">Dodatkowe elementy:</h3>
              <ul class="list-disc list-inside space-y-1 text-gray-700">
                {realizacja.specyfikacjaTechniczna.dodatkowe.map(item => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Proces realizacji -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
        <span class="text-4xl">🔨</span>
        Proces realizacji
      </h2>
      <div class="space-y-3">
        {realizacja.procesRealizacji.map((krok, index) => (
          <div class="flex gap-4 items-start">
            <div class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
              {index + 1}
            </div>
            <p class="text-gray-700 pt-1">{krok}</p>
          </div>
        ))}
      </div>
      <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-900">
          ⏱️ <strong>Czas realizacji:</strong> {realizacja.czasRealizacji}
        </p>
      </div>
    </section>

    <!-- Wyniki -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
        <span class="text-4xl">📊</span>
        Wyniki i efekty
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
          <div class="text-3xl mb-2">⚡</div>
          <h3 class="font-semibold mb-2">Roczna produkcja</h3>
          <p class="text-2xl font-bold text-blue-600">{realizacja.wyniki.rocznaProdukcja}</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
          <div class="text-3xl mb-2">🔋</div>
          <h3 class="font-semibold mb-2">Autokonsumpcja</h3>
          <p class="text-2xl font-bold text-green-600">{realizacja.wyniki.autokonsumpcja}</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
          <div class="text-3xl mb-2">🌱</div>
          <h3 class="font-semibold mb-2">Redukcja CO₂</h3>
          <p class="text-2xl font-bold text-emerald-600">{realizacja.wyniki.redukcjaCO2}</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
          <div class="text-3xl mb-2">💰</div>
          <h3 class="font-semibold mb-2">Zwrot inwestycji</h3>
          <p class="text-2xl font-bold text-orange-600">{realizacja.wyniki.zwrotInwestycji}</p>
        </div>
      </div>
    </section>

    <!-- Opinia klienta -->
    {realizacja.cytat && (
      <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
          <span class="text-4xl">💬</span>
          Opinia klienta
        </h2>
        <div class="bg-gray-50 border-l-4 border-blue-500 p-8 rounded-r-xl italic">
          <p class="text-lg text-gray-800 mb-4">"{realizacja.cytat.tresc}"</p>
          <p class="text-sm font-semibold text-gray-600">— {realizacja.cytat.autor}</p>
        </div>
      </section>
    )}

    <!-- CTA -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-8 rounded-xl text-center">
      <h2 class="text-2xl font-bold mb-4">Chcesz podobną instalację?</h2>
      <p class="mb-6">Skontaktuj się z nami i otrzymaj bezpłatną wycenę w 48h</p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a 
          href={`${import.meta.env.BASE_URL}/kontakt/`}
          class="inline-block px-8 py-3 bg-white text-blue-600 rounded-lg font-semibold hover:bg-blue-50 transition"
        >
          Bezpłatna wycena
        </a>
        <a 
          href="tel:123456789"
          class="inline-block px-8 py-3 bg-transparent border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition"
        >
          Zadzwoń: 123 456 789
        </a>
      </div>
    </section>

    <!-- Zobacz więcej realizacji -->
    <section class="mt-12 text-center">
      <a 
        href={`${import.meta.env.BASE_URL}/realizacje/`}
        class="inline-block text-blue-600 hover:text-blue-700 font-medium"
      >
        ← Zobacz wszystkie realizacje
      </a>
    </section>
  </article>
</BaseLayout>
